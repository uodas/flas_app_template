<!doctype html>
<html lang="en">
  <head>
    {% block head %}
    <!-- Required meta tags -->
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      
      <style> 
        .navbar-nav:hover .nav-item .nav-link:hover {
          color: dimgray;
        }     
      </style>

      {% block styles %}
        <!-- Bootstrap CSS -->
        {{ bootstrap.load_css() }}
      {% endblock %}

    {% endblock %}
  </head>


  <body>
    <!-- Your page content -->
    {% block content %}
      {% include "tfs_logo.jinja2" %}
      {% include "menu.jinja2" %}
    {% endblock %}

    {% block scripts %}
      <!-- Optional JavaScript -->
      {{ bootstrap.load_js() }}
    {% endblock %}
  </body>

</html>

